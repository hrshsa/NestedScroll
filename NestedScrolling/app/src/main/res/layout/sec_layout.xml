<?xml version="1.0" encoding="utf-8"?>
<blog.csdn.net.mchenys.nestedscrolling.TitleBar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#ff00ff">
        <TextView
            android:text="TITLE"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <blog.csdn.net.mchenys.nestedscrolling.MyListView
        android:id="@+id/mylistview"
        android:layout_below="@id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></blog.csdn.net.mchenys.nestedscrolling.MyListView>
</blog.csdn.net.mchenys.nestedscrolling.TitleBar>